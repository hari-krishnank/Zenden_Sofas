                                    </div>
                                    <div class="table_section padding_infor_info">
                                        <div class="table-responsive-sm">
                                            <table class="table" id="ordersTable">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">ORDER ID</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">PRODUCT</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">CUSTOMER</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">TOTAL PRICE</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">ORDER DATE</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">PAYMENT METHOD</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">STATUS</th>
                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">ORDER ITEMS</th>


                                                    </tr>
                                                </thead>
                                                <tbody style="font-weight: 400; color: black;">
                                                    <% let serialNumber=1; %>
                                                    <% orders.forEach(order=> { %>
                                                        <% order.items.forEach(item=> { %>
                                                            <% if (order.status!=='pending' ) { %>

                                                                <tr>
                                                                    <td><%= serialNumber %></td>
                                                                    <td>
                                                                        <%=order._id %>
                                                                    </td>
                                                                    <td><img src="/resizedImages/<%=item.product_id.image[0] %>"
                                                                            alt="" style="width: 100px; height: 75px;">
                                                                    </td>
                                                                    <td>
                                                                        <%=order.user_name%>
                                                                    </td>
                                                                    <td>
                                                                        <%=order.total_amount%>
                                                                    </td>
                                                                    <td>
                                                                        <%=order.date%>
                                                                    </td>
                                                                    <td>
                                                                        <%=order.payment%>
                                                                    </td>
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <select class="form-select statusSelector"
                                                                                style="background-color: #f0f0f0;color: black; border-radius: 5px;"
                                                                                name="statusSelector"
                                                                                onchange="updateOrderStatus(this.value, '<%= order._id %>', '<%= item._id %>')">
                                                                                <option value="placed"
                                                                                    <%=item.ordered_status==='placed'
                                                                                    ? 'selected' : '' %>>Placed</option>
                                                                                <option value="shipped"
                                                                                    <%=item.ordered_status==='shipped'
                                                                                    ? 'selected' : '' %>>Shipped
                                                                                </option>
                                                                                <option value="out_for_delivery"
                                                                                    <%=item.ordered_status==='out_for_delivery'
                                                                                    ? 'selected' : '' %>>Out for
                                                                                    Delivery</option>
                                                                                <option value="delivered"
                                                                                    <%=item.ordered_status==='delivered'
                                                                                    ? 'selected' : '' %>>Delivered
                                                                                </option>
                                                                                <option value="request_return"
                                                                                    <%=item.ordered_status==='request_return'
                                                                                    ? 'selected' : '' %>>Request Return
                                                                                </option>
                                                                                <option value="returned"
                                                                                    <%=item.ordered_status==='returned'
                                                                                    ? 'selected' : '' %>>Returned
                                                                                </option>
                                                                                <option value="request_cancellation"
                                                                                    <%=item.ordered_status==='request_cancellation'
                                                                                    ? 'selected' : '' %>>Request
                                                                                    Cancellation</option>
                                                                                <option value="cancelled"
                                                                                    <%=item.ordered_status==='cancelled'
                                                                                    ? 'selected' : '' %>>Cancelled
                                                                                </option>

                                                                            </select>

                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        
                                                                        <div class="text-end">
                                                                            <a
                                                                                href="/admin/order-details?orderId=<%= order._id %>&itemId=<%= item._id %>"><button
                                                                                    class="btn btn-danger btn-sm font-sm list-products"
                                                                                    data-product-id="">VIEW</button></a>

                                                                            <!-- Button to show cancellation reason -->

