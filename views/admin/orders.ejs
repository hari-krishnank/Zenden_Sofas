    <script>
        function updateOrderStatus(newStatus, orderId, itemId) {
            $.ajax({
                type: 'POST',
                url: '/admin/updateOrderStatus',
                data: {
                    orderId: orderId,
                    itemId: itemId,
                    newStatus: newStatus
                },
                success: function (response) {
                    if (response.success) {

                        $(`#status-${orderId}-${itemId}`).text(newStatus);

                    } else {
                        console.error('Failed to update order status:', response.error);
                    }
                },
                error: function (error) {
                    console.error('Failed to update order status:', error);
                }
            });
        }

    </script>
    <script>
        const updatedStatusElement = $(`#status-${orderId}-${itemId}`);
        if (updatedStatusElement) {
            updatedStatusElement.text(newStatus);
        }

    </script>


