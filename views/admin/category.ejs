   <script>
      async function deleteCategory(categoryId) {
         try {
            const response = await fetch(`/admin/category/deleteCategory/${categoryId}`, {
               method: 'DELETE',
               headers: {
                  'Content-Type': 'application/json',
               },
            });
            window.location.reload();

