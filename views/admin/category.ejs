                              <div class="table-responsive-sm">
                                 <table id="categoryTable" class="table">

                                    <thead>
                                       <tr>
                                          <th></th>
                                          <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">NAME</th>
                                          <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">DESCRIPTION</th>
