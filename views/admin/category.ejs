                                          <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">DELETE</th>
                                          <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">STATUS</th>
                                          <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">ACTION</th>

                                       </tr>
                                    </thead>

                                    <tbody style="font-weight: 400; color: black;">
                                       <% let serialNumber=1; %>
                                       <% if(categories.length> 0){%> <% for(let i=0; i < categories.length; i++){ %>
                                             <tr>
                                                <td><%=serialNumber%></td>
                                                <td width="15%">
                                                   <%= categories[i].name %>
                                                </td>

                                                <td width="20%">
                                                   <%= categories[i].description %>
                                                </td>
                                                <td class="text" width="15%">
                                                   <%= categories[i].edit %>

                                                      <a href="/admin/editCategories?categoryId=<%=categories[i]._id%>"
                                                         class="btn cur-p btn-outline-info">Edit</a>

                                                </td>
                                                <td width="15%">
                                                   <a href="#" class="btn cur-p btn-outline-info"
                                                      onclick="deleteCategory('<%= categories[i]._id %>')">Delete</a>
                                                </td>

                                                <td width="15%">
                                                   <%= categories[i].Status %>

                                                      <% if(categories[i].is_listed) { %>
                                                         <span class="badge rounded-pill alert-success">Listed</span>
                                                         <% } else { %>
                                                            <span
                                                               class="badge rounded-pill alert-danger">Unlisted</span>
                                                            <% } %>

                                                </td>



                                                <td class="text" width="25%">
                                                   <% if(categories[i].is_listed===0){ %>
                                                      <a href="/admin/listCategories?id=<%=categories[i]._id %>"
                                                         class="btn btn-sm btn-success rounded font-sm mt-15">List</a>
                                                      <% } else { %>
                                                         <a href="/admin/listCategories?id=<%=categories[i]._id %>"
                                                            class="btn btn-sm btn-danger rounded font-sm mt-15">Unlist</a>
                                                         <% } %>
                                                </td>
                                             </tr>
                                             <% serialNumber++; %>
                                             <% } %>
                                                <% } %>
                                    </tbody>
