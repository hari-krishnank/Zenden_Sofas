    <script>
        function applyOffer(offerId, itemType, itemId) {

            $.ajax({
                url: '/admin/applyOffer',
                type: 'POST',
                data: {
                    offerId: offerId,
                    productId: (itemType === 'product') ? itemId : null,
                    categoryId: (itemType === 'category') ? itemId : null
                },
                success: function (response) {

                    console.log(response);
                },
                error: function (xhr, status, error) {

                    console.error(error);
                }
            });
        }


        function removeOffer(offerId, itemType, itemId) {
            $.ajax({
                url: '/admin/removeOffer',
                type: 'POST',
                data: {
                    productId: (itemType === 'product') ? itemId : null,
                    categoryId: (itemType === 'category') ? itemId : null
                },
                success: function (response) {
                    
                    console.log(response);
                },
                error: function (xhr, status, error) {
                   
                    console.error(error);
                }
            });
        }
