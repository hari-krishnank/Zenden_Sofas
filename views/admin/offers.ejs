                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
                                                            DISCOUNT</th>
                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
                                                            OFFER STARTING</th>
                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
                                                            EXPIRE ON</th>
                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
                                                            STATUS</th>


                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
                                                            APPLY</th>

                                                        <th style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">REMOVE</th>


                                                    </tr>
                                                </thead>
                                                <tbody style="font-weight: 400; color: black;">
                                                    <% Offers.forEach(offer=> { %>
