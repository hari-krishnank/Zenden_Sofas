                                            <table class="table" id="offersTable">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
                                                            TYPE</th>
                                                        <th
                                                            style="font-weight: 600; color: rgb(205, 67, 67); width: auto;">
