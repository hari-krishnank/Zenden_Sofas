    <script>
        function toggleForm(formToShow, formToHide) {
            document.getElementById(formToShow).style.display = 'block';
            document.getElementById(formToShow).querySelector('select').removeAttribute('disabled');

            document.getElementById(formToHide).style.display = 'block';
            document.getElementById(formToHide).querySelector('select').setAttribute('disabled', 'disabled');
        }
    </script>


    <!-- validation -->



    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const nameInput = document.getElementById("offerName");
            const descriptionInput = document.getElementById("description")
            const discountInput = document.getElementById("discount");
            const startingDateInput = document.getElementById("startingDate");
            const expireDateInput = document.getElementById("expireDate");
            const form = document.getElementById("addOfferForm");

            nameInput.addEventListener("input", validateName);
            descriptionInput.addEventListener("input", validateDescription);
            discountInput.addEventListener("input", validateDiscount);
            startingDateInput.addEventListener("input", validateStartingDate);
            expireDateInput.addEventListener("input", validateExpireDate);

            form.addEventListener("submit", function (event) {
                const isValidName = validateName();
                const isValidDescription = validateDescription();
                const isValidDiscount = validateDiscount();
                const isValidStartingDate = validateStartingDate();
                const isValidExpireDate = validateExpireDate();

                if (!isValidName || !isValidDescription || !isValidDiscount || !isValidStartingDate || !isValidExpireDate) {
                    event.preventDefault(); 
                }
            });

            function validateName() {
                const nameError = document.getElementById("nameError");
                const nameValue = nameInput.value.trim();

                if (nameValue === "") {
                    nameError.textContent = "Offer Name cannot be empty";
                    nameInput.classList.add("is-invalid");
                    return false;
                } else {
                    nameError.textContent = "";
                    nameInput.classList.remove("is-invalid");
                    return true;
                }
            }

            function validateDescription() {
                const descriptionError = document.getElementById("descriptionError");
                const descriptionValue = descriptionInput.value.trim();

                if (descriptionValue === "") {
                    descriptionError.textContent = "Product Description cannot be empty";
                    descriptionInput.classList.add("is-invalid");
                    return false;
                } else {
                    descriptionError.textContent = "";
                    descriptionInput.classList.remove("is-invalid");
                    return true;
                }
            }

            function validateDiscount() {
                const discountError = document.getElementById("discountError");
                const discountValue = discountInput.value.trim();

                if (discountValue === "" || isNaN(discountValue) || discountValue < 0 || discountValue > 100) {
                    discountError.textContent = "Percentage of Discount must be a number between 0 and 100";
                    discountInput.classList.add("is-invalid");
                    return false;
                } else {
                    discountError.textContent = "";
                    discountInput.classList.remove("is-invalid");
                    return true;
                }
            }

            function validateStartingDate() {
                const startingDateError = document.getElementById("startingDateError");
                const startingDateValue = startingDateInput.value.trim();

                if (startingDateValue === "") {
                    startingDateError.textContent = "Starting Date cannot be empty";
                    startingDateInput.classList.add("is-invalid");
                    return false;
                } else {
                    startingDateError.textContent = "";
                    startingDateInput.classList.remove("is-invalid");
                    return true;
                }
            }

            function validateExpireDate() {
                const expireDateError = document.getElementById("expireDateError");
                const expireDateValue = expireDateInput.value.trim();

                if (expireDateValue === "") {
                    expireDateError.textContent = "Expire Date cannot be empty";
                    expireDateInput.classList.add("is-invalid");
                    return false;
                } else {
                    expireDateError.textContent = "";
                    expireDateInput.classList.remove("is-invalid");
                    return true;
                }
            }


        })
    </script>
