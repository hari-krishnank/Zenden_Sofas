   <script>
      const categoryNameInput = document.getElementById("category_name");
      const categoryDescriptionInput = document.getElementById("category_description");

      // Event listener for category name input
      categoryNameInput.addEventListener("input", function () {
         validateCategoryName();
      });

      // Event listener for category description input
      categoryDescriptionInput.addEventListener("input", function () {
         validateCategoryDescription();
      });

      // Function to validate category name
      function validateCategoryName() {
         const categoryNameValue = categoryNameInput.value.trim();
         const categoryNameError = document.getElementById("categoryNameError");

         categoryNameError.textContent = "";

         if (categoryNameValue === "") {
            categoryNameError.textContent = "Category Name is required";
            categoryNameInput.classList.add("is-invalid");
         } else if (/^\d+$/.test(categoryNameValue)) {
            categoryNameError.textContent = "Category Name should not contain numbers.";
            categoryNameInput.classList.add("is-invalid");
         } else {
            categoryNameInput.classList.remove("is-invalid");
         }
      }

      // Function to validate category description
      function validateCategoryDescription() {
         const categoryDescriptionValue = categoryDescriptionInput.value.trim();
         const categoryDescriptionError = document.getElementById("categoryDescriptionError");

         categoryDescriptionError.textContent = "";

         if (categoryDescriptionValue === "") {
            categoryDescriptionError.textContent = "Category Description is required";
            categoryDescriptionInput.classList.add("is-invalid");
         } else {
            categoryDescriptionInput.classList.remove("is-invalid");
         }
      }

      // Function to validate the entire form
      function validateForm() {
         validateCategoryName();
         validateCategoryDescription();


         // Check if there are any validation errors
         if (document.querySelectorAll('.is-invalid').length > 0) {
            return false;
         }

         return true;
      }

   </script>
