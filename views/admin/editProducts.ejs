    <script>
        document.addEventListener("DOMContentLoaded", function() {
            document.getElementById('productImage').addEventListener('change', function (event) {
                const container = document.getElementById('selectedImagesContainer');
                // container.innerHTML = ''; // Clear previous selection
    
                const files = event.target.files;
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    const reader = new FileReader();
    
                    reader.onload = function (e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'img-thumbnail'; // Add Bootstrap img-thumbnail class
                        img.style.width = '100px'; // Set width to 100px (adjust as needed)
                        img.style.height = '100px'; // Set height to 100px (adjust as needed)
                        container.appendChild(img);
                        const deleteBtn = document.createElement('a');
                    deleteBtn.href = '#';
                    deleteBtn.className = 'btn btn-danger btn-sm mt-2';
                    deleteBtn.innerText = 'Delete';
                    deleteBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        imgContainer.remove(); // Remove the image container
                    });
                    imgContainer.appendChild(deleteBtn);

                    container.appendChild(imgContainer);
                    };
    
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>

<script>
    async function deleteImage(event,imageName, productId) {
        try {
            const response = await fetch(`/admin/products/deleteImage?imageName=${imageName}&id=${productId}`, {
                method: 'PUT',
            });

            const data = await response.json();

            if (data.success) {
                // Reload the page or update the view as needed
                location.reload();
            } else {
                console.error('Failed to delete image');
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const priceInput = document.getElementById("productPrice");
        const quantityInput = document.getElementById("productQuantity");
        const priceError = document.getElementById("priceError");
        const quantityError = document.getElementById("quantityError");

        const nameInput = document.getElementById("productName");
        const descriptionInput = document.getElementById("productDescription");
        const nameError = document.getElementById("nameError");
        const descriptionError = document.getElementById("descriptionError");


           // Event listener for name input
           nameInput.addEventListener("input", function () {
            const nameValue = nameInput.value.trim();

            if (nameValue === "") {
                nameError.textContent = "Product Name is required";
                nameInput.classList.add("is-invalid");
            } else {
                nameError.textContent = "";
                nameInput.classList.remove("is-invalid");
            }
        });

        // Event listener for description input
        descriptionInput.addEventListener("input", function () {
            const descriptionValue = descriptionInput.value.trim();

            if (descriptionValue === "") {
                descriptionError.textContent = "Product Description is required";
                descriptionInput.classList.add("is-invalid");
            } else {
                descriptionError.textContent = "";
                descriptionInput.classList.remove("is-invalid");
            }
        });

        // Event listener for price input
        priceInput.addEventListener("input", function () {
            const priceValue = parseFloat(priceInput.value);

            if (isNaN(priceValue) || priceValue <= 0) {
                priceError.textContent = "Enter valid Price";
                priceInput.classList.add("is-invalid");
            } else {
                priceError.textContent = "";
                priceInput.classList.remove("is-invalid");
            }
        });

        // Event listener for quantity input
        quantityInput.addEventListener("input", function () {
            const quantityValue = parseInt(quantityInput.value);

            if (isNaN(quantityValue) || quantityValue <= 0) {
                quantityError.textContent = "Enter valid quantity";
                quantityInput.classList.add("is-invalid");
            } else {
                quantityError.textContent = "";
                quantityInput.classList.remove("is-invalid");
            }
        });

        // Event listener for form submission
        const form = document.getElementById("editProductForm");
        form.addEventListener("submit", function (event) {
            const priceValue = parseFloat(priceInput.value);
            const quantityValue = parseInt(quantityInput.value);

            // Validate price
            if (isNaN(priceValue) || priceValue <= 0) {
                priceError.textContent = "Enter valid Price";
                priceInput.classList.add("is-invalid");
                event.preventDefault(); // Prevent form submission
            } else {
                priceError.textContent = "";
                priceInput.classList.remove("is-invalid");
            }

            // Validate quantity
            if (isNaN(quantityValue) || quantityValue <= 0) {
                quantityError.textContent = "Enter valid quantity";
                quantityInput.classList.add("is-invalid");
                event.preventDefault(); // Prevent form submission
            } else {
                quantityError.textContent = "";
                quantityInput.classList.remove("is-invalid");
            }
        });
    });
</script>

