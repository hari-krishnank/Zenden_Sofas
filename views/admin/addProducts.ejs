<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById('productImage').addEventListener('change', function (event) {
            const container = document.getElementById('selectedImagesContainer');
            container.innerHTML = ''; // Clear previous selection

            const files = event.target.files;
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const reader = new FileReader();

                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'img-thumbnail'; // Add Bootstrap img-thumbnail class
                    img.style.width = '100px'; // Set width to 100px (adjust as needed)
                    img.style.height = '100px'; // Set height to 100px (adjust as needed)
                    container.appendChild(img);
                };

                reader.readAsDataURL(file);
            }
        });
    });
</script>


