<script>
    document.addEventListener("DOMContentLoaded", function () {
        const priceInput = document.getElementById("productPrice");
        const quantityInput = document.getElementById("productQuantity");
        const nameInput = document.getElementById("productName");
        const descriptionInput = document.getElementById("productDescription");

        // Event listener for price input
        priceInput.addEventListener("input", validatePrice);

        // Event listener for quantity input
        quantityInput.addEventListener("input", validateQuantity);

        // Event listener for name input
        nameInput.addEventListener("input", validateName);

        // Event listener for description input
        descriptionInput.addEventListener("input", validateDescription);

        // Event listener for form submission
        const form = document.getElementById("addProductForm");
        form.addEventListener("submit", function (event) {
            const isValidPrice = validatePrice();
            const isValidQuantity = validateQuantity();
            const isValidName = validateName();
            const isValidDescription = validateDescription();

            if (!isValidPrice || !isValidQuantity || !isValidName || !isValidDescription) {
                event.preventDefault(); // Prevent form submission
            }
        });

        function validatePrice() {
            const priceError = document.getElementById("priceError");
            const priceValue = parseFloat(priceInput.value);

            if (isNaN(priceValue) || priceValue <= 0) {
                priceError.textContent = "Enter valid Price";
                priceInput.classList.add("is-invalid");
                return false;
            } else {
                priceError.textContent = "";
                priceInput.classList.remove("is-invalid");
                return true;
            }
        }

        function validateQuantity() {
            const quantityError = document.getElementById("quantityError");
            const quantityValue = parseInt(quantityInput.value);

            if (isNaN(quantityValue) || quantityValue <= 0) {
                quantityError.textContent = "Enter valid quantity";
                quantityInput.classList.add("is-invalid");
                return false;
            } else {
                quantityError.textContent = "";
                quantityInput.classList.remove("is-invalid");
                return true;
            }
        }

        function validateName() {
            const nameError = document.getElementById("nameError");
            const nameValue = nameInput.value.trim();

            if (nameValue === "") {
                nameError.textContent = "Product Name cannot be empty";
                nameInput.classList.add("is-invalid");
                return false;
            } else {
                nameError.textContent = "";
                nameInput.classList.remove("is-invalid");
                return true;
            }
        }

        function validateDescription() {
            const descriptionError = document.getElementById("descriptionError");
            const descriptionValue = descriptionInput.value.trim();

            if (descriptionValue === "") {
                descriptionError.textContent = "Product Description cannot be empty";
                descriptionInput.classList.add("is-invalid");
                return false;
            } else {
                descriptionError.textContent = "";
                descriptionInput.classList.remove("is-invalid");
                return true;
            }
        }
    });
</script>

    
    
