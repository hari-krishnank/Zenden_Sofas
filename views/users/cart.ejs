                </tr>
              </thead>
              <tbody style="font-weight: 500; color: black;">
                <% let totalQuantity=0; let totalProductPrice=0; cartDetails.items.forEach((cartItem)=> {
                  const itemTotalPrice = cartItem.product_id.price * cartItem.quantity;
                  totalQuantity += cartItem.quantity;
                  totalProductPrice += itemTotalPrice;
                  %>
                  <tr>
                    <td class="product-image"><a href="#"><img src="/resizedImages/<%= cartItem.product_id.image[0] %>"
                          alt="" style="width: 100px; height: auto;"></a></td>
                    <!-- Add other table rows as needed -->

                    <!-- Example row displaying name, price, quantity, and total -->
                    <td>
                      <%= cartItem.product_id.name %>
                    </td>
                    <td>
                     
                      <% if (cartItem.product_id.offer || cartItem.product_id.category?.offer) { %>
                         
                          <b style="color: rgb(27, 218, 68); font-size: 15px;">₹ <%= cartItem.product_id.offerPrice %></b>
                         
                          <span style="text-decoration: line-through; color: red;">₹ <%= cartItem.product_id.price %></span>
                          <% if (cartItem.product_id.offer) { %>
                              
                              <span style="color: red; font-weight: 500;"><%= cartItem.product_id.offer.percentage %> % OFF</span>
                          <% } else { %>
                             
                              <span style="color: red; font-weight: 500;"><%= cartItem.product_id.category.offer.percentage %> % OFF</span>
                          <% } %>
                      <% } else { %>
                          
                          <b>₹ <%= cartItem.product_id.price %></b>
                      <% } %>
                  </td>
                    <td>

                      <!-- <%= cartItem.quantity %> -->
                      <div class="product_count">
                        <span class="quantity-decrement" onclick="updateQuantity('<%= cartDetails._id %>','<%= cartItem.product_id._id %>',-1)">
                          <i class="ti-minus"></i>
                        </span>

                        <input class="input-number" type="text" value="<%= cartItem.quantity %>" min="1"
                          max="<%= cartItem.product_id.quantity %>" name="quantity" readonly>

                        <span class="quantity-increment" onclick="updateQuantity('<%= cartDetails._id %>', '<%= cartItem.product_id._id %>',1)">
                          <i class="ti-plus"></i>
                        </span>
                      </div>
                    </td>
                    <td>₹<%= cartItem.product_id.offerPrice * cartItem.quantity %></td>
                    </td>
                    <td>
                      <form onsubmit="confirmDelete(event, '<%= cartItem._id %>')" action="/deleteItems" method="POST"
                        data-product-id="<%= cartItem._id %>">

                        <input type="hidden" name="productOgId" value="<%= cartItem._id %>">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i></button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
                 
                  <tr>
                    <td colspan="4"></td>
                    <td>
