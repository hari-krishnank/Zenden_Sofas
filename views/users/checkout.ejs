    <script>
        function validateAddressForm() {
            // Reset all error messages
            document.getElementById('nameError').innerHTML = '';
            document.getElementById('housenameError').innerHTML = '';
            document.getElementById('cityError').innerHTML = '';
            document.getElementById('stateError').innerHTML = '';
            document.getElementById('phoneError').innerHTML = '';
            document.getElementById('pincodeError').innerHTML = '';

            var name = document.getElementById('name').value;
            var housename = document.getElementById('housename').value;
            var city = document.getElementById('city').value;
            var state = document.getElementById('state').value;
            var phone = document.getElementById('phone').value;
            var pincode = document.getElementById('pincode').value;

            // Check if any field is empty
            if (!name.trim()) {
                document.getElementById('nameError').innerHTML = 'Name is required.';
                return false;
            }

            if (!housename.trim()) {
                document.getElementById('housenameError').innerHTML = 'House Name is required.';
                return false;
            }

            if (!city.trim()) {
                document.getElementById('cityError').innerHTML = 'City is required.';
                return false;
            }

            if (!state.trim()) {
                document.getElementById('stateError').innerHTML = 'State is required.';
                return false;
            }

            if (!phone.trim()) {
                document.getElementById('phoneError').innerHTML = 'Phone is required.';
                return false;
            }

            if (!pincode.trim()) {
                document.getElementById('pincodeError').innerHTML = 'Pin Code is required.';
                return false;
            }

            // Validate phone and pincode as numbers
            if (isNaN(phone)) {
                document.getElementById('phoneError').innerHTML = 'Phone must be a number.';
                return false;
            }

            if (isNaN(pincode)) {
                document.getElementById('pincodeError').innerHTML = 'Pin Code must be a number.';
                return false;
            }

            // Validate phone length
            if (phone.length !== 10) {
                document.getElementById('phoneError').innerHTML = 'Phone must be 10 digits.';
                return false;
            }

            // Validate pincode length
            if (pincode.length !== 6) {
                document.getElementById('pincodeError').innerHTML = 'Pin Code must be 6 digits.';
                return false;
            }

            if (/\d/.test(name)) {
                document.getElementById('nameError').innerHTML = 'Name should not contain numbers.';
                return false;
            }

            return true;
        }
    </script>



