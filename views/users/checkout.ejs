    <script>
        function applyCoupon(code) {
            console.log('Applying coupon with code:', code);

            const amountElement = document.getElementById('total');
            if (!amountElement) {
                console.error("Element with id 'total' not found.");
                return;
            }
            const amountText = amountElement.innerText.replace('₹', '').trim();
            const subTotal = parseFloat(amountText.replace('-', ''));
            if (isNaN(subTotal)) {
                console.error("Failed to parse amount:", amountText);
                return;
            }

            $.ajax({
                url: '/applyCoupon',
                data: {
                    code: code,
                    subTotal: subTotal
                },
                method: "post",
                success: (response) => {
                    console.log("my resssy:", response);
                    if (response.couponClaimed) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops !!',
                            text: 'This coupon already used!'
                        })
                    } else if (response.maxAmount) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Oops !!',
                            text: 'You cant use the coupon...Buy more'
                        })
                    } else if (response.applied) {
                        document.getElementById('totalAmount').innerHTML = "₹" + response.updatedSubTotal;  // Update total
                        document.getElementById('discount').innerHTML = "₹" + response.discountAmount;
                        document.getElementById('total').innerHTML = "₹" + response.updatedSubTotal;  // Update total
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Discount redeemed',

                            showConfirmButton: false,
                            timer: 1500
                        })

                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops !!!',
                            text: 'Invalid Coupon!!!'
                        })
                    }

                }
            })

        }
    </script>
