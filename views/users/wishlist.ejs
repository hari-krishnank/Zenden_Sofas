    <script>
        // Function to handle dismissal of a product from wishlist
        function dismiss(element) {
            const productId = element.getAttribute('data-product-id');

            // Show confirmation dialog with custom size
            Swal.fire({
                text: "Are you sure you want to remove this product?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                customClass: {
                    popup: 'my-popup', // Define your custom CSS class here
                    content: 'my-content',
                    actions: 'my-actions',
                    confirmButton: 'my-confirm-button',
                    cancelButton: 'my-cancel-button'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, send AJAX request to delete product from wishlist
                    fetch('/deleteWishlistProduct', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId: productId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                
                                element.closest('tr').remove();
                                Swal.fire({
                                    title: 'Deleted!',
                                    text: 'Your product has been removed from wishlist.',
                                    icon: 'success',
                                    customClass: {
                                        popup: 'my-popup',
                                        content: 'my-content',
                                        actions: 'my-actions',
                                        confirmButton: 'my-confirm-button',
                                        cancelButton: 'my-cancel-button'
                                    }
                                });
                            } else {
                                console.error(data.message);
                                Swal.fire({
                                    title: 'Error!',
                                    text: 'Failed to remove the product from wishlist.',
                                    icon: 'error',
                                    customClass: {
                                        popup: 'my-popup',
                                        content: 'my-content',
                                        actions: 'my-actions',
                                        confirmButton: 'my-confirm-button',
                                        cancelButton: 'my-cancel-button'
                                    }
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: 'Internal server error occurred.',
                                icon: 'error',
                                customClass: {
                                    popup: 'my-popup',
                                    content: 'my-content',
                                    actions: 'my-actions',
                                    confirmButton: 'my-confirm-button',
                                    cancelButton: 'my-cancel-button'
                                }
                            });
                        });
                }
            });
        }

        // Add event listener to all dismiss buttons
        document.querySelectorAll('.dismiss-btn').forEach(button => {
            button.addEventListener('click', function () {
                dismiss(this);
            });
        });
    </script>





